<div id="layoutAuthentication_content">
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-5">
          <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Login</h3></div>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <label class="small mb-1" for="inputEmailAddress">Email</label>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email address", class: "form-control py-4" %>
                </div>
                <div class="form-group">
                  <label class="small mb-1" for="inputPassword">Password</label>
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control py-4" %>
                </div>
                <div class="form-group">
                  <% if devise_mapping.rememberable? %>
                      <div class="custom-control custom-checkbox">
                        <%= f.check_box :remember_me, class: "custom-control-input" %>
                        <%= f.label :remember_me, class: "custom-control-label" %>
                      </div>
                  <% end %>
                </div>
                  <div class="actions">
                    <%= f.submit "Log in", class: "btn btn-primary" %>
                  </div>
              <% end %>
            </div>
            <div class="card-footer text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

