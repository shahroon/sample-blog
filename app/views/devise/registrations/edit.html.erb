<div style="margin-left: 10px;">
  <%= link_to :back do %>
      <i class="fa fa-arrow-left"></i> Back
  <% end %>
</div>
<div id="layoutAuthentication_content">
  <main>
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-7">
          <div class="card shadow-lg border-0 rounded-lg mt-5">
            <div class="card-header"><h3 class="text-center font-weight-light my-4">Edit Account</h3></div>
            <div class="card-body">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <%= render "devise/shared/error_messages", resource: resource %>
                  <div class="form-group">
                    <label class="small mb-1" for="inputEmailAddress">Email</label>
                    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Enter email address", class: "form-control py-4" %>
                  </div>
                  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                  <% end %>


                  <div class="form-row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1" for="inputConfirmPassword">Password</label>
                        <% if @minimum_password_length %>
                            <i style="font-size: small;"><%= @minimum_password_length %> characters minimum</i>
                        <% end %>
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control py-4" %>
                        <i style="font-size: small;">(leave blank if you don't want to change it)</i><br />
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1" for="inputConfirmPassword">Confirm Password</label>
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control py-4" %>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1" for="inputConfirmPassword">Current Password</label>
                        <i style="font-size: small;">(we need your current password to confirm your changes)</i><br />
                        <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control py-4"  %>
                      </div>
                    </div>
                  </div>
                  <div class="form-row">
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1" for="inputFirstName">First Name</label>
                        <%= f.text_field :firstname, class: "form-control py-4", placeholder: "Enter first name" -%>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <div class="form-group">
                        <label class="small mb-1" for="inputLastName">Last Name</label>
                        <%= f.text_field :lastname, class: "form-control py-4", placeholder: "Enter last name" -%>
                      </div>
                    </div>
                  </div>
                  <div class="form-group mt-4 mb-0">
                    <div class="actions">
                      <%= f.submit "Update", class: "btn btn-primary btn-block" %>
                    </div>
                  </div>
              <% end %>
            </div>
            <div class="card-footer text-center">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>

